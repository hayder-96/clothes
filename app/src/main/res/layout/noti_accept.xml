<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent">

<androidx.cardview.widget.CardView
    android:id="@+id/card"
   android:visibility="gone"
    android:layout_width = "16dp"
    android:layout_height = "16dp"
    app:cardBackgroundColor = "#EF0606"
    app:cardCornerRadius = "10dp"
    app:layout_constraintStart_toStartOf = "@+id/image_notyy"
    app:layout_constraintTop_toTopOf = "@+id/image_notyy"><TextView
    android:id = "@+id/textView_notifaction"
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:layout_gravity="center"
    android:textColor = "#fff"
    android:textSize = "15sp" /></androidx.cardview.widget.CardView><ImageView
    android:id = "@+id/image_notyy"
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    app:layout_constraintBottom_toBottomOf = "parent"
    app:layout_constraintEnd_toEndOf = "parent"
    app:layout_constraintStart_toStartOf = "parent"
    app:layout_constraintTop_toTopOf = "parent"
    app:srcCompat = "@drawable/ic_notifications" /></androidx.constraintlayout.widget.ConstraintLayout>