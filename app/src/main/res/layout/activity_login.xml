<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation="vertical"
    android:background="#C3BABA"
    tools:context = ".RegAndLogin.Login">
  <androidx.cardview.widget.CardView
      android:layout_width = "match_parent"
      app:cardCornerRadius="20dp"
      android:layout_margin="10dp"
      android:elevation="20dp"
      android:layout_height = "match_parent" >
    <LinearLayout
      android:layout_width = "match_parent"
      android:layout_height = "match_parent"
      android:layout_margin = "10dp"
      android:background = "#8796E6"
      android:orientation = "vertical">
            <View
                android:id = "@+id/view"
                android:layout_width = "match_parent"
                android:layout_height = "20dp" /><EditText
      android:id = "@+id/name_log"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:background = "#fff"
      android:gravity = "center"
      android:hint = "البريد الالكتروني"
      android:inputType = "textEmailAddress"
      android:textColor = "#000"
      android:textSize = "20sp" /><View

      android:layout_width = "match_parent"
      android:layout_height = "30dp" /><EditText
      android:id = "@+id/password_login"
      android:layout_width = "match_parent"

      android:layout_height = "wrap_content"
        android:background = "#fff"
      android:gravity = "center"
      android:hint = "الرمز السري"
      android:inputType = "textPassword"
      android:textColor = "#000"
      android:textSize = "20sp" /><View

      android:layout_width = "match_parent"
      android:layout_height = "30dp" /><Button
      android:id = "@+id/bu"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:elevation = "20dp"
      android:onClick = "login"
      android:text = "تسجيل" /><View

      android:layout_width = "match_parent"
      android:layout_height = "30dp" /><Button
      android:id = "@+id/button3"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:elevation = "20dp"
      android:onClick = "reg"
      android:text = "ليس لديك حساب" /></LinearLayout></androidx.cardview.widget.CardView>




  </LinearLayout>