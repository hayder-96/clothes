<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background="#C3BABA"
    android:orientation="vertical"
    tools:context = ".RegAndLogin.Rigster">

   <androidx.cardview.widget.CardView
       android:layout_width = "match_parent"
       app:cardCornerRadius="20dp"
       android:layout_margin="10dp"
       android:elevation="20dp"
       android:layout_height = "match_parent" >


  <LinearLayout
      android:layout_width = "match_parent"
      android:layout_height = "match_parent"
      android:layout_margin = "10dp"
      android:background = "#8796E6"
      android:orientation = "vertical">
            <View
                android:id = "@+id/view2"
                android:layout_width = "match_parent"
                android:layout_height = "30dp" /><EditText
      android:id = "@+id/name_reg"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:background = "#fff"
      android:gravity = "center"
      android:hint = "الاسم"
      android:textColor = "#000"
      android:textSize = "20sp" /><View
      android:id = "@+id/view4"
      android:layout_width = "match_parent"
      android:layout_height = "30dp" /><EditText
      android:id = "@+id/email_reg"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:background = "#fff"
      android:gravity = "center"
      android:hint = "البريد الالكتروني"
      android:inputType = "textEmailAddress"
      android:textColor = "#000"
      android:textSize = "20sp" /><View
      android:id = "@+id/view5"
      android:layout_width = "match_parent"
      android:layout_height = "30dp" />
      <EditText
      android:id = "@+id/password_reg"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:background = "#fff"
      android:gravity = "center"
      android:hint = "الرمز السري"
      android:inputType = "textPassword"
      android:textColor = "#000"
      android:textSize = "20sp" /><View
      android:id = "@+id/view6"
      android:layout_width = "match_parent"
      android:layout_height = "30dp" /><Button
      android:id = "@+id/button"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:onClick = "Register"
      android:text = "تسجيل الدخول" /></LinearLayout>


  </androidx.cardview.widget.CardView>
</LinearLayout>